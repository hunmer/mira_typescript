{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "切换在线版",
      "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
      "sourceMaps": true,
      "smartStep": true,
      "args": [
        "${workspaceFolder}/switch-dependencies.js",
        "online",
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "切换离线版",
      "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
      "sourceMaps": true,
      "smartStep": true,
      "args": [
        "${workspaceFolder}/switch-dependencies.js",
        "offline",
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "打包并上传全部",
        "console": "integratedTerminal",
      "sourceMaps": true,
      "smartStep": true,
      "cwd": "${workspaceFolder}",
      "args": [
        "${workspaceFolder}/switch-dependencies.js",
        "build",
      ]
    },
    {
      "name": "启动 Mira Server (开发模式)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/packages/mira-server/src/index.ts",
      "cwd": "${workspaceFolder}/packages/mira-server",
      "runtimeArgs": [
      "--inspect",
      "-r",
      "ts-node/register"
      ],
      "env": {
      "NODE_ENV": "development",
      "DATA_PATH": "${workspaceFolder}/data",
      "HTTP_PORT": "3000",
      "WS_PORT": "8081",
      "TS_NODE_PROJECT": "${workspaceFolder}/packages/mira-server/tsconfig.json"
      },
      "console": "integratedTerminal",
      "sourceMaps": true,
      "smartStep": true,
      "resolveSourceMapLocations": [
      "${workspaceFolder}/**",
      "!**/node_modules/**"
      ],
      "skipFiles": [
      "<node_internals>/**",
      "**/node_modules/**"
      ],
      "outFiles": [
      "${workspaceFolder}/packages/**/dist/**/*.js"
      ]
    },
    {
      "name": "启动 Mira Server (生产模式)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/packages/mira-server/src/index.ts",
      "cwd": "${workspaceFolder}/packages/mira-server",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "env": {
        "NODE_ENV": "production",
        "DATA_PATH": "${workspaceFolder}/data",
        "HTTP_PORT": "3000",
        "WS_PORT": "8081",
        "TS_NODE_PROJECT": "${workspaceFolder}/packages/mira-server/tsconfig.json"
      },
      "console": "integratedTerminal",
      "sourceMaps": true,
      "smartStep": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ],
      "outFiles": [
        "${workspaceFolder}/packages/**/dist/**/*.js"
      ]
    },
    {
      "name": "启动 Mira Server CLI",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/packages/mira-server/src/cli.ts",
      "cwd": "${workspaceFolder}/packages/mira-server",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "args": [
        "--http-port",
        "3000",
        "--ws-port",
        "8081",
        "--data-path",
        "${workspaceFolder}/data"
      ],
      "env": {
        "TS_NODE_PROJECT": "${workspaceFolder}/packages/mira-server/tsconfig.json"
      },
      "console": "integratedTerminal",
      "sourceMaps": true,
      "smartStep": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ],
      "outFiles": [
        "${workspaceFolder}/packages/**/dist/**/*.js"
      ]
    },
  ]
}