{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run ts-node",
      "runtimeExecutable": "ts-node",
      "cwd": "${workspaceFolder}/tools/",
      "args": [
        "${workspaceFolder}/tools/convertLibraryData.ts",
        "I:/software/librarys/影视/items.db",
        "//192.168.31.3/文件共享/影视素材",
        "2,11,12,13,14,15,19,20,21,22,27,30,37,38,47,48,49,51,52,59,62,63,64,65,66,73,74,76,77,78,79,86,89,92,94,95,99,105,106,107,109,110,111,129,130,133,135,136,139,239,246,255,256,258,259,260,261,263,264,266,269,271,277,286,297,319,358"
      ]
    },
    {
      "name": "启动 Mira Server (开发模式)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/packages/mira-server/src/index.ts",
      "cwd": "${workspaceFolder}/packages/mira-server",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "env": {
        "NODE_ENV": "development",
        "DATA_PATH": "${workspaceFolder}/data",
        "HTTP_PORT": "3000",
        "WS_PORT": "8081",
        "TS_NODE_PROJECT": "${workspaceFolder}/packages/mira-server/tsconfig.json"
      },
      "console": "integratedTerminal",
      "sourceMaps": true,
      "smartStep": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ],
      "outFiles": [
        "${workspaceFolder}/packages/**/dist/**/*.js"
      ]
    },
    {
      "name": "启动 Mira Server (生产模式)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/packages/mira-server/src/index.ts",
      "cwd": "${workspaceFolder}/packages/mira-server",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "env": {
        "NODE_ENV": "production",
        "DATA_PATH": "${workspaceFolder}/data",
        "HTTP_PORT": "3000",
        "WS_PORT": "8081",
        "TS_NODE_PROJECT": "${workspaceFolder}/packages/mira-server/tsconfig.json"
      },
      "console": "integratedTerminal",
      "sourceMaps": true,
      "smartStep": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ],
      "outFiles": [
        "${workspaceFolder}/packages/**/dist/**/*.js"
      ]
    },
    {
      "name": "启动 Mira Server CLI",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/packages/mira-server/src/cli.ts",
      "cwd": "${workspaceFolder}/packages/mira-server",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "args": [
        "--http-port",
        "3000",
        "--ws-port",
        "8081",
        "--data-path",
        "${workspaceFolder}/data"
      ],
      "env": {
        "TS_NODE_PROJECT": "${workspaceFolder}/packages/mira-server/tsconfig.json"
      },
      "console": "integratedTerminal",
      "sourceMaps": true,
      "smartStep": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ],
      "outFiles": [
        "${workspaceFolder}/packages/**/dist/**/*.js"
      ]
    },
    {
      "name": "测试 Mira Core (安全导入)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/test-import.js",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    }
  ]
}