{
  "name": "mira-app-server",
  "version": "1.0.13",
  "description": "Mira Server - standalone server application using mira-core",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mira-server": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "rebuild": "npm install && npm run build",
    "start": "node dist/index.js",
    "start:ts": "node --inspect -r ts-node/register src/index.ts",
    "dev": "node --inspect -r ts-node/register src/index.ts",
    "cli": "ts-node src/cli.ts",
    "prepublish": "npm run build",
    "prepack": "npm run build"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "mira",
    "server"
  ],
  "author": "hunmer",
  "license": "ISC",
  "dependencies": {
    "mira-app-core": "file:D:/mira_typescript/packages/mira-core/",
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "commander": "^11.1.0",
    "axios": "^1.6.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0"
  }
}