{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "types": [
            "node",
            "jest"
        ],
        "baseUrl": "./src",
        "paths": {
            "*": [
                "*",
                "node_modules/*"
            ]
        }
    },
    "include": [
        "./src/client/**/*",
        "./src/modules/**/*",
        "src/types.ts",
        "src/index.ts",
        "./examples/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}