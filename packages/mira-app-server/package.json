{
  "name": "mira-app-server",
  "version": "1.0.24",
  "description": "Mira Server - standalone server application using mira-app-core",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mira-app-server": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "rebuild": "npm install && npm run build",
    "start": "node dist/index.js",
    "start:ts": "node --inspect -r ts-node/register src/index.ts",
    "dev": "node --inspect -r ts-node/register src/index.ts",
    "cli": "ts-node src/cli.ts",
    "cli:start": "ts-node src/cli.ts start",
    "plugins:test:win": "ts-node src/cli.ts start -d \"D:\\mira_typescript\\plugins\"",
    "plugins:test:mac": "ts-node src/cli.ts start -d /Users/Zhuanz/mira_typescript/plugins/",
    "cli:health": "ts-node src/cli.ts health",
    "cli:version": "ts-node src/cli.ts version",
    "test": "jest --config sdk/jest.config.js",
    "test:watch": "jest --config sdk/jest.config.js --watch",
    "test:coverage": "jest --config sdk/jest.config.js --coverage",
    "test:integration": "node sdk/scripts/test-and-fix.js",
    "build:sdk": "tsc --project sdk/tsconfig.json",
    "sdk:example": "ts-node sdk/examples/usage-examples.ts",
    "prepublish": "npm run build",
    "prepack": "npm run build"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "mira",
    "server"
  ],
  "author": "hunmer",
  "license": "ISC",
  "dependencies": {
    "@types/multer": "^2.0.0",
    "@types/yauzl": "^2.10.3",
    "axios": "^1.6.2",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mira-app-core": "^1.0.24",
    "mira-server-sdk": "^1.0.11",
    "mira-storage-sqlite": "^1.0.20",
    "multer": "^2.0.2",
    "socket.io": "^4.7.4",
    "sqlite3": "^5.1.7",
    "ws": "^8.18.3",
    "yauzl": "^3.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.18.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
