{
  "name": "@hunmer/mira-monorepo",
  "version": "1.0.0",
  "description": "Mira TypeScript project - monorepo with core, server, and plugins",
  "scripts": {
    "build:core": "cd D:/mira_typescript/packages/mira-core && npm run rebuild",
    "build:server": "cd D:/mira_typescript/packages/mira-server && npm run rebuild",
    "build:storage": "cd D:/mira_typescript/packages/mira-storage-sqlite && npm run rebuild",
    "build:mira_thumb": "cd D:/mira_typescript/plugins/plugins/mira_thumb && npm run rebuild",
    "build:mira_user": "cd D:/mira_typescript/plugins/plugins/mira_user && npm run rebuild",
    "build:upload_statistics": "cd D:/mira_typescript/plugins/plugins/upload_statistics && npm run rebuild",
    "build:plugins": "npm run build:mira_thumb && npm run build:mira_user && npm run build:upload_statistics",
    "start:server": "npm run build:core && npm run build:server && npm run build:storage && npm run build:plugins",
    "dev:server": "npm run dev --workspace=mira-server",
    "build:docker": "./mira-server/docker-build.bat"
  },
  "keywords": ["mira", "typescript", "server", "plugins"],
  "author": "hunmer",
  "license": "ISC",
  "devDependencies": {
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2"
  }
}
